# Snyk (https://snyk.io) policy file, patches or ignores known vulnerabilities.
version: v1.25.0

# Language and package manager settings
language-settings:
  python:
    # Skip dev dependencies in security scans
    dev-dependencies: false

patch: {}

ignore: {}

# Paths to exclude from scanning
exclude:
  global:
    - ".git/**"
    - "**/.git/**"
    - "**/node_modules/**"
    - "**/bower_components/**"
    - "**/vendor/**"
    - "**/.venv/**"
    - "**/venv/**"
    - "**/__pycache__/**"
    - "**/.pytest_cache/**"
    - "**/test/**"
    - "**/tests/**"
    - "**/*test*"
    - "**/*.test.*"
    - "**/.github/**"
    - "**/Dockerfile*"
    - "**/*.md"
    - "**/*.txt"
    - "**/*.json"
    - "**/*.yaml"
    - "**/*.yml"
